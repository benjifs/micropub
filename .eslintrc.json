{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "camelcase": ["error"],
    "comma-dangle": 0,
    "indent": [ 2, "tab" ],
    "no-trailing-spaces": "error",
    "semi": [2, "never"],
    "quotes": ["error", "single"],
    "guard-for-in": "error"
  }
}